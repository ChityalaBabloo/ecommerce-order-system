{
  "info": {
    "name": "E-commerce Order Processing API",
    "description": "Collection of API endpoints for the Order Processing System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"customerName\": \"John Doe\",\n  \"customerEmail\": \"john@example.com\",\n  \"items\": [\n    {\n      \"productName\": \"Laptop\",\n      \"quantity\": 1,\n      \"price\": 999.99\n    },\n    {\n      \"productName\": \"Mouse\",\n      \"quantity\": 2,\n      \"price\": 25.50\n    }\n  ]\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/orders",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "orders"]
        }
      }
    },
    {
      "name": "Get Order by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/orders/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "orders", "1"]
        }
      }
    },
    {
      "name": "Get All Orders",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/orders",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "orders"]
        }
      }
    },
    {
      "name": "Get Orders by Status (PENDING)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/orders?status=PENDING",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "orders"],
          "query": [
            {
              "key": "status",
              "value": "PENDING"
            }
          ]
        }
      }
    },
    {
      "name": "Update Order Status to PROCESSING",
      "request": {
        "method": "PUT",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/orders/1/status?status=PROCESSING",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "orders", "1", "status"],
          "query": [
            {
              "key": "status",
              "value": "PROCESSING"
            }
          ]
        }
      }
    },
    {
      "name": "Update Order Status to SHIPPED",
      "request": {
        "method": "PUT",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/orders/1/status?status=SHIPPED",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "orders", "1", "status"],
          "query": [
            {
              "key": "status",
              "value": "SHIPPED"
            }
          ]
        }
      }
    },
    {
      "name": "Update Order Status to DELIVERED",
      "request": {
        "method": "PUT",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/orders/1/status?status=DELIVERED",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "orders", "1", "status"],
          "query": [
            {
              "key": "status",
              "value": "DELIVERED"
            }
          ]
        }
      }
    },
    {
      "name": "Cancel Order",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/api/orders/1/cancel",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "orders", "1", "cancel"]
        }
      }
    }
  ]
}
